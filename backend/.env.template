# Database (REQUIRED)
DATABASE_URL=postgresql://username:password@host:5432/database_name
REDIS_URL=redis://host:6379

# Security (REQUIRED - Generate strong secrets)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
COOKIE_SECRET=your-super-secret-cookie-key-minimum-32-characters

# CORS Settings (REQUIRED - Update with your actual domains)
STORE_CORS=http://localhost:3000,https://yourdomain.com
ADMIN_CORS=http://localhost:7001,https://admin.yourdomain.com
AUTH_CORS=http://localhost:3000,https://yourdomain.com

# Sanity CMS (REQUIRED)
SANITY_API_TOKEN=your-sanity-api-token
SANITY_PROJECT_ID=your-sanity-project-id

# AWS S3 File Storage (REQUIRED)
S3_FILE_URL=https://your-bucket.s3.region.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# Stripe Payment (REQUIRED)
STRIPE_API_KEY=sk_test_your-stripe-secret-key

# Email Service (OPTIONAL)
RESEND_API_KEY=your-resend-api-key